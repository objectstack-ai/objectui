{
  "type": "div",
  "className": "space-y-6 max-w-4xl",
  "body": [
    {
      "type": "div",
      "className": "space-y-2",
      "body": [
        {
          "type": "text",
          "content": "File Upload Component",
          "className": "text-3xl font-bold"
        },
        {
          "type": "text",
          "content": "Upload files with drag and drop support",
          "className": "text-muted-foreground"
        }
      ]
    },
    {
      "type": "card",
      "className": "p-6",
      "body": {
        "type": "div",
        "className": "space-y-6",
        "body": [
          {
            "type": "div",
            "className": "space-y-4",
            "body": [
              {
                "type": "text",
                "content": "Single File Upload",
                "className": "text-lg font-semibold"
              },
              {
                "type": "file-upload",
                "id": "avatar",
                "label": "Profile Picture",
                "accept": "image/*",
                "maxFiles": 1
              }
            ]
          },
          {
            "type": "separator"
          },
          {
            "type": "div",
            "className": "space-y-4",
            "body": [
              {
                "type": "text",
                "content": "Multiple Files",
                "className": "text-lg font-semibold"
              },
              {
                "type": "file-upload",
                "id": "documents",
                "label": "Upload Documents",
                "accept": ".pdf,.doc,.docx",
                "maxFiles": 5
              }
            ]
          },
          {
            "type": "separator"
          },
          {
            "type": "div",
            "className": "space-y-4",
            "body": [
              {
                "type": "text",
                "content": "Image Gallery Upload",
                "className": "text-lg font-semibold"
              },
              {
                "type": "file-upload",
                "id": "gallery",
                "label": "Upload Images",
                "accept": "image/jpeg,image/png,image/webp",
                "maxFiles": 10
              }
            ]
          }
        ]
      }
    },
    {
      "type": "card",
      "className": "p-6",
      "body": {
        "type": "div",
        "className": "space-y-4",
        "body": [
          {
            "type": "text",
            "content": "With Description",
            "className": "text-lg font-semibold"
          },
          {
            "type": "file-upload",
            "id": "attachment",
            "label": "Attachment",
            "description": "Drag and drop files or click to browse. Max file size: 10MB",
            "maxFiles": 3
          }
        ]
      }
    }
  ]
}
