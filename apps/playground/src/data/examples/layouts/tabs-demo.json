  "className": "space-y-6",
  "body": [
    {
      "type": "text",
      "content": "Tabs Component",
      "className": "text-2xl font-bold"
    },
    {
      "type": "tabs",
      "defaultValue": "account",
      "className": "w-full",
      "items": [
        {
          "value": "account",
