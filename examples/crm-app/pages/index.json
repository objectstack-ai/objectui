{
  "type": "page",
  "title": "Dashboard",
  "body": [
    {
      "type": "grid",
      "columns": { "xs": 1, "sm": 2, "lg": 4 },
      "gap": 4,
      "className": "mb-6",
      "children": [
        {
          "type": "card",
          "children": [
            {
              "type": "statistic",
              "label": "Total Revenue",
              "value": "$45,231.89",
              "trend": "up",
              "description": "+20.1% from last month"
            }
          ]
        },
        {
          "type": "card",
          "children": [
            {
              "type": "statistic",
              "label": "Active Customers",
              "value": "2,350",
              "trend": "up",
              "description": "+180 new customers"
            }
          ]
        },
        {
          "type": "card",
          "children": [
            {
              "type": "statistic",
              "label": "Sales Pipeline",
              "value": "12",
              "trend": "neutral",
              "description": "Opportunities in progress"
            }
          ]
        },
        {
          "type": "card",
          "children": [
            {
              "type": "statistic",
              "label": "Win Rate",
              "value": "48%",
              "trend": "down",
              "description": "-2% from last month"
            }
          ]
        }
      ]
    },
    {
      "type": "grid",
      "columns": { "xs": 1, "lg": 7 },
      "gap": 4,
      "children": [
        {
          "type": "card",
          "title": "Revenue Overview",
          "className": "col-span-1 lg:col-span-4",
          "children": [
            {
              "type": "chart",
              "chartType": "bar",
              "height": 350,
              "data": [
                 { "name": "Jan", "total": 1200 },
                 { "name": "Feb", "total": 2100 },
                 { "name": "Mar", "total": 1800 },
                 { "name": "Apr", "total": 2400 },
                 { "name": "May", "total": 3100 },
                 { "name": "Jun", "total": 4200 }
              ],
              "categories": ["total"],
              "index": "name",
              "colors": ["blue"]
            }
          ]
        },
        {
          "type": "card",
          "title": "Recent Sales",
          "className": "col-span-1 lg:col-span-3",
          "children": [
            {
              "type": "list",
              "items": [
                { "name": "Alice Smith", "amount": "$1,999.00", "email": "alice@example.com" },
                { "name": "Bob Jones", "amount": "$39.00", "email": "bob@example.com" },
                { "name": "Charlie Brown", "amount": "$299.00", "email": "charlie@example.com" },
                { "name": "Diana Prince", "amount": "$99.00", "email": "diana@example.com" },
                { "name": "Evan Wright", "amount": "$150.00", "email": "evan@example.com" }
              ],
              "renderItem": {
                "type": "flex",
                "justify": "between",
                "className": "py-4 border-b last:border-0",
                "children": [
                  {
                    "type": "flex",
                    "className": "gap-4",
                    "children": [
                      { "type": "avatar", "fallback": "U", "className": "h-9 w-9" },
                      {
                        "type": "div",
                        "children": [
                          { "type": "text", "value": "${name}", "className": "text-sm font-medium" },
                          { "type": "text", "value": "${email}", "className": "text-xs text-muted-foreground" }
                        ]
                      }
                    ]
                  },
                  { "type": "text", "value": "${amount}", "className": "text-sm font-medium" }
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
