{
  "type": "div",
  "className": "space-y-6 max-w-4xl",
  "body": [
    {
      "type": "div",
      "className": "space-y-2",
      "body": [
        {
          "type": "text",
          "content": "OTP Input Component",
          "className": "text-3xl font-bold"
        },
        {
          "type": "text",
          "content": "One-time password input for authentication",
          "className": "text-muted-foreground"
        }
      ]
    },
    {
      "type": "card",
      "className": "p-6",
      "body": {
        "type": "div",
        "className": "space-y-6",
        "body": [
          {
            "type": "div",
            "className": "space-y-4",
            "body": [
              {
                "type": "text",
                "content": "6-Digit OTP",
                "className": "text-lg font-semibold"
              },
              {
                "type": "text",
                "content": "Enter the verification code sent to your phone",
                "className": "text-sm text-muted-foreground"
              },
              {
                "type": "input-otp",
                "id": "otp-6",
                "maxLength": 6
              }
            ]
          },
          {
            "type": "separator"
          },
          {
            "type": "div",
            "className": "space-y-4",
            "body": [
              {
                "type": "text",
                "content": "4-Digit PIN",
                "className": "text-lg font-semibold"
              },
              {
                "type": "text",
                "content": "Enter your security PIN",
                "className": "text-sm text-muted-foreground"
              },
              {
                "type": "input-otp",
                "id": "pin-4",
                "maxLength": 4
              }
            ]
          },
          {
            "type": "separator"
          },
          {
            "type": "div",
            "className": "space-y-4",
            "body": [
              {
                "type": "text",
                "content": "Two-Factor Authentication",
                "className": "text-lg font-semibold"
              },
              {
                "type": "text",
                "content": "Enter the 6-digit code from your authenticator app",
                "className": "text-sm text-muted-foreground"
              },
              {
                "type": "input-otp",
                "id": "2fa",
                "maxLength": 6
              },
              {
                "type": "flex",
                "direction": "row",
                "gap": 2,
                "justify": "between",
                "align": "center",
                "children": [
                  {
                    "type": "button",
                    "label": "Resend Code",
                    "variant": "ghost",
                    "size": "sm"
                  },
                  {
                    "type": "button",
                    "label": "Verify",
                    "size": "sm"
                  }
                ]
              }
            ]
          }
        ]
