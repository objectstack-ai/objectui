{
  "type": "page",
  "title": "Opportunities Pipeline",
  "body": [
    {
      "type": "kanban",
      "columns": [
        { "id": "new", "title": "New Lead", "color": "bg-gray-100" },
        { "id": "contacted", "title": "Contacted", "color": "bg-blue-50" },
        { "id": "proposal", "title": "Proposal Sent", "color": "bg-yellow-50" },
        { "id": "won", "title": "Closed Won", "color": "bg-green-50" }
      ],
      "data": [
        { "id": "1", "title": "Big Tech Deal", "description": "$50,000 - Acme Corp", "status": "proposal", "priority": "high", "assignees": ["JD"] },
        { "id": "2", "title": "Small Startup", "description": "$5,000 - StartX", "status": "new", "priority": "low", "assignees": ["AS"] },
        { "id": "3", "title": "Gov Contract", "description": "$120,000 - State Dept", "status": "contacted", "priority": "critical", "assignees": ["JD", "AS"] },
        { "id": "4", "title": "Enterprise License", "description": "$85,000 - Globex", "status": "won", "priority": "medium", "assignees": ["AS"] }
      ],
      "groupBy": "status",
      "cardTemplate": {
        "type": "card",
        "className": "mb-2 shadow-sm hover:shadow-md cursor-grab active:cursor-grabbing",
        "children": [
            {
                "type": "flex",
                "justify": "between",
                "align": "start",
                "className": "mb-2",
                "children": [
                    { "type": "text", "value": "${title}", "className": "font-medium leading-none" },
                    { 
                        "type": "badge", 
                        "label": "${priority}", 
                        "variant": "outline",
                        "className": "text-xs px-1 py-0 h-5" 
                    }
                ]
            },
            { "type": "text", "value": "${description}", "className": "text-sm text-muted-foreground mb-3" },
            {
                "type": "flex",
                "justify": "end",
                "gap": 1,
                "children": [
                     { "type": "avatar", "fallback": "JD", "size": "sm", "className": "h-6 w-6 text-[10px]" }
                ]
            }
        ]
      }
    }
  ]
}
